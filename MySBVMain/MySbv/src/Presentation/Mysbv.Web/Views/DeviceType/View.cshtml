@using Kendo.Mvc.UI
@model Application.Dto.DeviceType.DeviceTypeDto

@{
    ViewBag.Title = "View Device";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .label {
        width: 100px !important;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="well">



    <div class="ui-widget-header">
        <h4 style="margin-left: 5px">View Device</h4>
    </div>

    <div id="content">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <div class="ui-widget-content" style="padding: 5px;">
                @Html.HiddenFor(model => model.DeviceTypeId)
        
                <div class="row">
                    <div class="span2">
                        @Html.LabelFor(model => model.SupplierId, new { @class = "label required", @style = "width:150px !important" })
                    </div>
                    <div class="span2">
                        @(Html.Kendo().DropDownListFor(a => a.SupplierId).BindTo(ViewData["GetSuppliers"] as SelectList).HtmlAttributes(new { @style = "width:238px; margin-bottom: 8px", tabindex = "10", @readonly = "readonly" }))
                    </div>

                    <div class="span2 offset2">
                        @Html.LabelFor(model => model.ManufacturerId, new { @class = "label required", @style = "width:150px !important" })
                    </div>
                    <div class="span2">
                        @(Html.Kendo().DropDownListFor(a => a.ManufacturerId).BindTo(ViewData["GetManufactures"] as SelectList).HtmlAttributes(new { @style = "width:238px; margin-bottom: 8px", tabindex = "10" , @readonly = "readonly"}))
                    </div>
                </div>

                <div class="row">
                    <div class="input-prepend">
                        <div class="span2">
                            @Html.LabelFor(model => model.Name, new { @class = "label required", @style = "width:150px !important" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Name, new { @disabled = "disabled" })
                        </div>
                        <div class="span2 offset2">
                            @Html.LabelFor(model => model.Description, new { @class = "add-on", @style = "width:150px" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Description, new { @disabled = "disabled" })
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="input-prepend">
                        <div class="span2">
                            @Html.LabelFor(model => model.Model, new { @class = "label required", @style = "width:150px !important" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Model, new { @disabled = "disabled" })
                        </div>

                    </div>
                </div>
        
                

                <div class="row">
                    <div style="margin-left: 33px">
                        <div class="span2 offset10">
                            <a href='@Url.Action("Index")' id="confirm" class="btn btn-danger" style="width: 70px; margin-left: -45px">Cancel</a>
                        </div>

                    </div>
                </div>
            </div> <!--- end of container-->
        }
    </div>
</div>

