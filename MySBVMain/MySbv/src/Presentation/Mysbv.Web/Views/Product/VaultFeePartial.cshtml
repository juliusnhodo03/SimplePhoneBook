    <script language="javascript">

    $("#ddlSupplier").change(function () {
        var id = $(this).val();

        $.getJSON('@Url.Action("GetDevices")', { supplierId: id }, function (result) {

            var devicesSelected = $('#ddlDevices');
            devicesSelected.empty();

            devicesSelected.append($('<option/>', {
                value: -1,
                text: "Please Select"
            }));

            $.each(result, function (index, device) {
                devicesSelected.append($('<option/>', {
                    value: device.value,
                    text: device.text
                }));
            });
        });
    });

    </script>



