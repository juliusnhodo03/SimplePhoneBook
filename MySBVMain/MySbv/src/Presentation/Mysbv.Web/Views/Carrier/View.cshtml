@using Kendo.Mvc.UI
@model Application.Dto.Carrier.CitCarrierDto

@{
    ViewBag.Title = "View Carrier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .label {
        width: 100px !important;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="well">



    <div class="ui-widget-header">
        <h4 style="margin-left: 5px">View CIT Carrier </h4>
    </div>

    <div id="content">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <div class="ui-widget-content" style="padding: 5px;">
                @Html.HiddenFor(model => model.CitCarrierId)

                <div class="row">
                    <div class="input-prepend">
                        <div class="span2">
                            @Html.LabelFor(model => model.Name, new { @class = "label required", @style = "width:150px !important" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Name, new { @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>

                        <div class="span2 offset2">
                            @Html.LabelFor(model => model.Description, new { @class = "label", @style = "width:150px !important" })
                        </div>

                        <div class="span2">
                            @Html.TextBoxFor(model => model.Description, new { @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                </div>
        
                <div class="row">
                    <div class="input-prepend">
                        <div class="span2">
                            @Html.LabelFor(model => model.SerialStartNumber, new { @class = "label required", @style = "width:150px !important" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.SerialStartNumber, new { @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.SerialStartNumber)
                        </div>

                        <div class="span2 offset2"></div>
                        <div class="span2"></div>
                    </div>
                </div>
        
                <div class="row">
                    <div style="margin-left: 33px">
                        <div class="span2 offset10">
                            <a href='@Url.Action("Index")' id="confirm" class="btn btn-danger" style="width: 70px; margin-left: -45px">Cancel</a>
                        </div>
                        <div class="span1">

                        </div>
                    </div>
                </div>
            </div> <!--- end of container-->
        }
    </div>
</div>
