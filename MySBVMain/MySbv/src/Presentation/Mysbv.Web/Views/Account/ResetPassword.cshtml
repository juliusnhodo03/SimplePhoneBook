@using System.Web.Optimization
@model Application.Dto.Account.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", new { resetToken = ViewBag.PasswordResetToken }, FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div class="well">
        <div class="container">
            <div class="row">
                <div class="span12">
                    @Html.ValidationSummary()
                </div>
            </div>

            <div class="row">
                <div class="span12">
                    <h3>Reset Password</h3>
                </div>
            </div>

            <div class="row">
                <div class="input-prepend">
                    <div class="span2">
                        @Html.LabelFor(model => model.Password, new { @class = "label required", style = "width: 150px !Important" })
                    </div>
                    <div class="span2">
                        @Html.PasswordFor(model => model.Password, new { @style = "width:230px; " })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="input-prepend">
                    <div class="span2">
                        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "label required", style = "width: 150px !Important" })
                        <span class="requiredField">*</span>
                    </div>
                    <div class="span2">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @style = "width:230px; " })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span2 offset2">
                    <input type="submit" value="Submit" class="btn btn-primary btn-small" style="width: 110px" />
                </div>

                <div class="span2">
                    @Html.ActionLink("Cancel", "Login", null, new { @class = "btn btn-danger btn-small", @style = "margin-left: -28px; width: 90px" })
                </div>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
