@{    
    Layout = "~/Areas/razor/Views/Shared/_MobileLayout.cshtml";
}

@(Html.Kendo().MobileView()
        .Name("button-events")        
        .Title("Button Events")
        .Content(
            @<text>
                   
            @(Html.Kendo().MobileButton()
                    .Name("mobile-button1")
                    .Text("Trigger Event 1")
                    .HtmlAttributes(new { style = "display: block; margin: 2em; text-align: center;" })
                    .Events(events => events.Click("logClick")))
            
            @(Html.Kendo().MobileButton()
                    .Name("mobile-button2")
                    .Text("Trigger Event 2")
                    .HtmlAttributes(new { style = "display: block; margin: 2em; text-align: center;" })
                    .Events(events => events.Click("logClick")))
            
            @(Html.Kendo().MobileButton()
                    .Name("mobile-button3")
                    .Text("Trigger Event 3")
                    .HtmlAttributes(new { style = "display: block; margin: 2em; text-align: center;" })
                    .Events(events => events.Click("logClick")))

            <div class="console"></div>

         </text>)
)

<script>
    function logClick(e) {
        kendoConsole.log(this.element.prop("id") + " was clicked!");
    }
</script>

<style scoped>
    .km-root .console {
        background-color: transparent;
        border: 0;
        margin: 1.4em 1em;
        overflow: hidden;
        height: auto;
    }
</style>